{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Projects */
    /* Language and Environment */
    "target": "ESNext",

    /* Modules */
    "module": "ESNext",
    "baseUrl": "./",

    /* JavaScript Support */
    /* Emit */
    "sourceMap": true,
    "outDir": "./dist",

    /* Interop Constraints */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,     
    "alwaysStrict": true,

    /* Completeness */
    "skipLibCheck": true,

    /* paths */
    "paths": {
      "modules/*": ["./modules/*"],
      "config/*": ["./config/*"],
      "prisma/*": ["./prisma/*"],
    },
  }
}
